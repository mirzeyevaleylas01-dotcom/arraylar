#include <iostream>
#include <vector>
#include <algorithm> // insert üçün

std::vector<int> merge_arrays_at_k(std::vector<int> A, const std::vector<int>& B, int k) {
    // k indeksinin A massivinin daxilində olduğundan əmin oluruq
    if (k < 0 || k > A.size()) {
        std::cout << "Xeta: Yanlis k indeksi." << std::endl;
        return A; 
    }

    // Bütün B massivini A massivinin k+1-ci indeksindən başlayaraq daxil edirik.
    // k və (k+1)-ci elementlər arasına daxil etmək insert(A.begin() + k + 1, ...) deməkdir.
    A.insert(A.begin() + k + 1, B.begin(), B.end());

    return A;
}

// Nümunə istifadə:
// std::vector<int> A = {1, 2, 3, 4, 5};
// std::vector<int> B = {99, 88, 77};
// int k = 1; // A[1]=2 və A[2]=3 arasına yerləşdiririk
// Nəticə: {1, 2, 99, 88, 77, 3, 4, 5}
